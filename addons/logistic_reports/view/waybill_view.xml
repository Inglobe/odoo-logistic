<openerp>
    <data>
        <!-- FORMVIEW -->
        <record id="view_logistic_waybill_form" model="ir.ui.view">
            <field name="name">logistic.waybill.form</field>
            <field name="model">logistic.waybill</field>
            <field name="inherit_id" ref="logistic_x.view_logistic_waybill_form"/>
            <field name="arch" type="xml">
                <page string="Payment And Cost" position="after">
                    <page string="Summary">
                        <group>
                            <field name="days_range" />
                            <field name="consumption_copy" />
                            <group>
                                <field name="total_price" />
                                <field name="total_cost" />
                                <field name="net" />
                            </group>
                            <group>
                                <field name="price_km" />
                                <field name="cost_km" />
                                <field name="net_km" />
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>




        <!-- TREEVIEW -->

        <record id="view_logistic_waybill_report_tree" model="ir.ui.view">
            <field name="name">logistic_report.waybill.tree</field>
            <field name="model">logistic.waybill</field>
            <field name="arch" type="xml">
                <tree string="waybill" create='false'>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="tractor_id"/>
                    <field name="driver_id"/>
                    <field name="state" invisible="1"/>
                    <field name="days_range"/>
                    <field name="consumption_copy"/>
                    <field name="total_price" sum="Total"/>
                    <field name="total_cost" sum="Total"/>
                    <field name="net" sum="Total"/>
                    <field name="cost_km" avg="Promedio"/>
                    <field name="price_km" avg="Promedio"/>
                    <field name="net_km" avg="Promedio"/>
                </tree>
            </field>
        </record>

        <record id="action_logistic_waybill_report" model="ir.actions.act_window">
            <field name="name">Report</field>
            <field name="res_model">logistic.waybill</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_logistic_waybill_report_tree"/>
        </record>

         <menuitem
            name="Report"
            id="menu_waybills_report"
            sequence="15"
            action="action_logistic_waybill_report"
            parent="logistic.menu_waybills_main"
            groups="logistic.group_view"
            />
    </data>
</openerp>
