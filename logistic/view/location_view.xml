<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_logistic_location_filter" model="ir.ui.view">
            <field name="name">logistic.location.select</field>
            <field name="model">logistic.location</field>
            <field name="arch" type="xml">
                <search string="location" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Name"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_logistic_location_form" model="ir.ui.view">
            <field name="name">logistic.location.form</field>
            <field name="model">logistic.location</field>
            <field name="arch" type="xml">
                <form string="location" version="7.0">
                    <header>
                    </header>
                    <sheet string="location">
                     <group>
                        <field name="name"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_logistic_location_tree" model="ir.ui.view">
            <field name="name">logistic.location.tree</field>
            <field name="model">logistic.location</field>
            <field name="arch" type="xml">
                <tree string="location"
                    >
                    <field name="name"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
